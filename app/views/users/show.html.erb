<div class="booyah-box col-xs-10 col-xs-offset-1">
  <div class="col-xs-4">
  <%= image_tag 'user.png' %>
  </div>
  <div class="col-xs-8">
    <h1><%= @user.email %></h1>
    <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
    <h4><%= @user.comments.count %> total comments</h4>
    <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews</h4>
  </div>
  <div class="clear"></div>
</div>

<br />
<div class="clear"></div>
<h1 class="text-center">My Comments</h1>
<br />
<% @user.comments.each do |comment| %>
  <div class="booyah-box col-xs-4 col-xs-offset-1">
    <h2><%= link_to comment.place.name, place_path(comment.place) %></h2>
    <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> -
      <% end %>
      <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>

<div class="clear"></div>
<h2 class="text-center">My Places</h2>